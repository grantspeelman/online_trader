<h1><%= @user.name %></h1>

<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b rel='twipsy' title='In Game Name'>IGN:</b>
  <%= @user.ign %>
</p>

<% if @user == current_user %>
    <p>The following services are authorized with this account</p>

    <% if current_user.authorized_with(:twitter) %>
        <label>Twitter</label>
        <%= image_tag("twitter_32.png") %>
        <br/>
    <% end %>
    <% if current_user.authorized_with(:facebook) %>
        <label>Facebook</label>
        <%= image_tag("facebook_32.png") %>
        <br/>
    <% end %>
    <% if current_user.authorized_with(:open_id) %>
        <label>Gmail</label>
        <%= image_tag("google_32.png") %>
    <% end %>

    <% unless current_user.authorized_with_everything %>
        <p>You can link other services to this account</p>

        <% unless current_user.authorized_with(:twitter) %>
            <label>Twitter</label>
            <%= link_to(image_tag("twitter_32.png"),
                        '/auth/twitter',
                        :title => 'Login with Twitter') %>
            <br/>
        <% end %>
        <% unless current_user.authorized_with(:facebook) %>
            <label>Facebook</label>
            <%= link_to(image_tag("facebook_32.png"),
                        '/auth/facebook',
                        :title => 'Login with Facebook') %>
            <br/>
        <% end %>
        <% unless current_user.authorized_with(:open_id) %>
            <label>Gmail</label>
            <%= link_to(image_tag("google_32.png"),
                        '/auth/open_id?openid_url=gmail.com',
                        :title => 'Login with Gmail') %>
        <% end %>
    <% end %>
<% end %>


<%= side_nav_link_to 'Edit User', edit_user_path(@user) if can? :update, @user %>
<%= side_nav_link_to 'List Users', users_path %>
