<h1>My Trades</h1>

<%= paginate @trades %>

<table>

<% @trades.each do |trade| %>
  <tr>
    <td><%= time_ago_in_words trade.updated_at %> old</td>
    <td><%= link_to trade, trade, id: dom_id(trade, :show) %></td>
  </tr>
<% end %>
</table>

<br />

<%= side_nav_link_to 'Add Trade', new_trade_path if can? :create, Trade  %>
