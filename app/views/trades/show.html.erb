
<div class="row">

  <div class="span6">
    <div class="user_field">
      <% if @trade.new_record? || @trade.user == current_user %>
          <b>You</b>
      <% else %>
          <b><%= @trade.user %></b>
      <% end %>
    </div>
    <div class="cards_fields">
      <% @trade.user_cards.each_with_index do |user_card, i| %>
          <div class="clearfix">
            <%= user_card %>
          </div>
      <% end %>
    </div>
  </div>

  <div class="span6">
    <div class="user_field">
      <% if @trade.with_user == current_user %>
          <b>You</b>
      <% else %>
          <b><%= @trade.with_user %></b>
      <% end %>
    </div>
    <div class="cards_fields">
      <% @trade.with_user_cards.each_with_index do |user_card, i| %>
          <div class="clearfix">
            <%= user_card %>
          </div>
      <% end %>
    </div>
  </div>
</div>


<%= side_nav_link_to 'Edit Trade', edit_trade_path(@trade) if can? :update, @trade %>
<%= side_nav_link_to 'List Trades', trades_path %>
