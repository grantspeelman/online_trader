<h1>Listing wants</h1>

<%= paginate @wants %>

<div class="listing">

<% @wants.each do |want| %>
  <div class="item">
    <%= image_tag("unknowncard.jpg", :height => "40") %>
    <div>
        <span class="amount"><%= want.amount %></span>
        <span class="card_name"><%= want.card_name %></span>
        </br>
        <%= link_to 'Show', want, :id => dom_id(want, :show) %>
        <%= link_to 'Edit', edit_want_path(want), :id => dom_id(want, :edit) %>
        <%= link_to 'Destroy', want, confirm: 'Are you sure?', method: :delete, :id => dom_id(want, :delete) %>
    </div>
  </div>
<% end %>

</div>

<%= link_to 'New Want', new_want_path %>

<br />


